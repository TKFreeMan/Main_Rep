@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using System.Reflection
@model IEnumerable<OneNineProject.Models.DocViewModel>

<!DOCTYPE html>
<html>
<head>

</head>
<body>
    @section left_sidebar {
        <div class="new_doc">
            <h4>Додати нову заяву <a href="~/Add/AddView">Вперед &raquo;</a></h4>
        </div>
    }
    @section content {
        <table class="table">
            <tr>
                <td>Вх№/Вих№</td>
                <td>Дата реєстрації заявки</td>
                <td>Дата отримання заявки</td>
                <td>Замовник робіт</td>
                <td>Тип робіт</td>
                <td>Виконаці</td>
                <td>Відмітки про хід виконання</td>
                <td class="NotesTd">Примітки</td>
                <td>Дії</td>
            </tr>
            @foreach (var doc in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x => doc.DocId) @Html.DisplayFor(x => doc.Seсrecy)</td>
                    <td>@Html.DisplayFor(x => doc.DocDate)</td>
                    <td>@Html.DisplayFor(x => doc.ReceiveDate)</td>
                    <td>@Html.DisplayFor(x => doc.Unit) <br/>
                        @Html.DisplayFor(x => doc.Persons)</td>
                    <td>@Html.DisplayFor(x => doc.WorkTypes)</td>
                    <td>@Html.DisplayFor(x => doc.Executors)</td>
                    <td>@Html.DisplayFor(x => doc.CheckMarks)</td>
                    <td>@Html.DisplayFor(x => doc.Notes)</td>
                    <td>@Html.ActionLink("Edit", "EditDoc", "Edit", new { Id = doc.DocId }, null) <br/>
                        @Html.ActionLink("Delete", "DeleteDoc","Delete", new { Id = doc.DocId }, null)
                    </td>
                </tr>
            }
        </table>
    }
</body>
</html>>